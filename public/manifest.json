{
  "manifest_version": 3,
  "name": "Subtle Timer",
  "description": "Subtle One-Click Timer",
  "version": "1.0.0",
  "icons": {
    "16": "/images/hourGlassIcon.png",
    "32": "/images/hourGlassIcon.png",
    "48": "/images/hourGlassIcon.png",
    "128": "/images/hourGlassIcon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Set timer: 60, 30 or 15 minutes"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
    "permissions": [
      "alarms",
      "notifications"
    ]
}
